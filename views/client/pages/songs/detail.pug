extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
  .singer-detail
    .container.my-3
      .row
        .col-12
          .inner-title #{song.title}
            .inner-actions
              .inner-action.inner-time
                i.fa-regular.fa-clock 
                | 20/10/2023
              .inner-action.inner-singer
                i.fa-solid.fa-microphone-lines 
                | #{singer.fullName}
              .inner-action.inner-topic
                i.fa-solid.fa-music 
                | #{topic.title}
              .inner-action.inner-like(button-like=song._id)
                i.fa-regular.fa-thumbs-up
                span #{song.like}
              .inner-action.inner-heart(class=(song.isFavoriteSong ? "active" : ""), button-favorite=song._id)
                i.fa-regular.fa-heart 
                | Bài hát yêu thích

            .inner-play
              .inner-avatar
                img(src=song.avatar alt=song.title)
              .inner-audio
                #aplayer(data-song=song data-singer=singer)

            .inner-desc
              .inner-label Mô tả
              .inner-text #{song.description}

            .inner-desc
              .inner-label Lời bài hát
              .inner-text #{song.lyrics}
